

<div class="d-flex position-relative page">
  
  <div class="main-content">
     <%= render 'single', post: @post %>
  </div>
  <div class="side-bar">
    <% if current_user.id == @post.user.id%>
      <%= link_to(edit_post_path @post) do %>
        <span class="badge rounded-pill  text-dark" title="Edit">
          <i class="bi bi-pencil"></i> Edit
        </span>
      <% end %>
      <a title="Edit" data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/posts/<%= @post.id%>"> 
        <span class="badge rounded-pill text-dark">
          <i class="bi bi-x-lg"></i> Delete
        </span>
      </a>
    <% end %>
  </div>
</div>



<div class="d-flex position-relative page">
  <div class="main-content">
   
     <%= render 'single', post: @post %>
  </div>
  <div class="sidebar px-2 sticky-top" style="top:50px">
    <div class=" mb-4" >
      <div class="card-body">
        <div class="d-flex align-items-center mb-3">
          <%=link_to profile_path current_user do %>
            <%= image_tag(current_user.image.url, class: 'rounded-circle avatar shadow-sm' ) if current_user.image && current_user.image.url %>
          <% end %>
          <div class="ms-2">
            <div class="fs-6">
              <%= link_to profile_path current_user do %> 
                <span class="text-dark "> <%= current_user.name %> </span>
              <% end %>
            </div>
            <div class="fs-7 text-muted"> <%= current_user.email%></div>
            
          </div>
        </div>

         <%= link_to(new_post_path) do %>
              <span class="btn btn-light" title="Create">
                  <i class="bi bi-plus-lg"></i> Create a new Post
              </span>
          <% end %>
      </div>
    </div>
  </div>
</div>

<% content_for :mainContent do %>
  
  <%= render 'single', post: @post %>
  
<% end %>

<% content_for :sidebarContent do %>
<div class="card">

   <div class="card-body">
    <h4>Post Details</h1>
    <div class="d-flex align-items-center mb-3">
      <%=link_to profile_path current_user do %>
        <%= image_tag(current_user.image.url, class: 'rounded-circle avatar shadow-sm' ) if current_user.image && current_user.image.url %>
      <% end %>
      <div class="ms-2">
        <div class="fs-6">
          <%= link_to profile_path current_user do %> 
            <span class="text-dark "> <%= current_user.name %> </span>
          <% end %>
        </div>
        <div class="fs-7 text-muted"> <%= current_user.email%></div>
        
      </div>
    </div>

    <% if current_user.id == @post.user.id%>
      <%= link_to(edit_post_path @post) do %>
        <span class="btn btn-light btn-block rounded-pill  text-dark" title="Edit">
          <i class="bi bi-pencil"></i> Edit
        </span>
      <% end %>
      <a title="Edit" data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/posts/<%= @post.id%>"> 
        <span class="btn  rounded-pill text-danger">
          <i class="bi bi-x-lg"></i> Delete
        </span>
      </a>
    <% end %>
  </div>
</div>
<% end %>


