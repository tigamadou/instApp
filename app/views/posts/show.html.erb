

<% content_for :mainContent do %>
  
  <%= render 'single', post: @post, truncate: false %>
  
<% end %>

<% content_for :sidebarContent do %>
<div class="">

   <div class="card-body">
    <h4>Post Details</h1>
    <div class="d-flex align-items-center mb-3">
      <%=link_to profile_path current_user do %>
        <div class="thumb32 rounded-circle " style="background-image: url(<%= current_user.image.url ? current_user.image.url : image_url('avatar') %> )" ></div>
      <% end %>
      <div class="ms-2">
        <div class="fs-6">
          <%= link_to profile_path current_user do %> 
            <span class="text-dark "> <%= current_user.name %> </span>
          <% end %>
        </div>
        
        
      </div>
    </div>

    <% if current_user.id == @post.user.id%>
      <%= link_to(edit_post_path @post) do %>
        <span class="btn bg-white btn-block rounded-pill  text-dark" title="Edit">
          <i class="bi bi-pencil"></i> Edit
        </span>
      <% end %>
      <a title="Edit" data-confirm="Are you sure?" rel="nofollow" data-method="delete" href="/posts/<%= @post.id%>"> 
        <span class="btn bg-white rounded-pill text-danger">
          <i class="bi bi-x-lg"></i> Delete
        </span>
      </a>
    <% end %>
  </div>
</div>
<% end %>


